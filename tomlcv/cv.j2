  <style rel="stylesheet" crossorigin>
    * {
      box-sizing: border-box;
      margin: 0;
      padding: 0;
    }

    :root {
      --page-margin: 8mm;
    }

    html,
    body {
      padding: 0;
    }

    body {
      font-family: Arial, sans-serif;
      font-size: 12px;
      line-height: 1.5;
    }

    #main {
      width: 210mm;
      margin: 3em auto;
      display: flex;
      flex-direction: column;
      align-items: center;
      box-shadow: #333 0 0 1em;
      text-align: justify;
      color: #333;
    }

    #header {
      width: 100%;
      padding: 1em var(--page-margin);
      background-color: #faedcd;
    }

    #header img {
      height: 160px;
      width: 160px;
      border-radius: 50%;
      margin: 1em 0;
    }

    #header .vsep {
      height: 5em;
      margin-right: 2em;
    }

    #header h2 {
      color: #666;
      padding: .5em 0;
    }

    #contact table {
      border-collapse: collapse;
    }

    #contact td {
      padding: 2px 0;
      border: none;
    }

    #contact td:first-child {
      font-weight: bold;
      padding-right: 1em;
    }

    #contact {
      font-size: small;
    }

    #content {
      padding: 0 var(--page-margin);
      padding-bottom: var(--page-margin);
    }

    #content h2 {
      padding: .5em 0 .1em 0;
    }

    #content h3 {
      margin-top: -.3em;
      padding-bottom: .2em;
    }

    #content h4 {
      color: #666;
      padding-bottom: .2em;
    }

    #content ul {
      padding-top: .5em;
      padding-left: 1em;
    }

    .grid {
      display: grid;
    }

    .grid.wide {
      grid-template-columns: 9rem 1fr;
    }

    .grid.narrow {
      grid-template-columns: 4rem 1fr;
    }

    .vsep {
      border-left: 1px solid #ccc;
      height: 1em;
      margin: 0 1em;
    }

    .row {
      display: flex;
      flex-direction: row;
    }

    .row.center {
      align-items: center;
    }

    .col {
      display: flex;
      flex-direction: column;
    }

    .col.center {
      align-items: center;
    }

    .pad-v {
      padding: 1em 0;
    }

    .page-break {
      border-bottom: 2px dashed #666;
      page-break-after: always;
    }

    h2:has(+.page-break) {
      page-break-before: always;
    }

    @page {
      size: A4;
      margin: 0;
    }

    @media print {
      #main {
        margin: 0;
        box-shadow: none;
      }

      .page-break {
        border: none;
      }
    }
  </style>

  <link rel="icon"
    href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 100 100%22><text y=%22.9em%22 font-size=%2290%22>ðŸ“„</text></svg>">
  <title>{{ name }} | {{title}}</title>
</head>

<body>
  <main id="main">
    <header id="header" class="row center">
      <div class="col center">
        <img src="{{image}}" alt="{{name}}">
        <div id="contact">
          <table>
            <tr>
              <td>Email</td>
              <td><a href="mailto:{{contact.email}}">{{contact.email}}</a></td>
            </tr>
            <tr>
              <td>Phone</td>
              <td>
                <a href="tel:{{contact.phone}}">{{contact.phone}}</a>
              </td>
            </tr>
            <tr>
              <td>LinkedIn</td>
              <td><a href="{{contact.linkedin}}">{{contact.linkedin}}</a></td>
            </tr>
            <tr>
              <td>Website</td>
              <td><a href="{{contact.website}}">{{contact.website}}</a></td>
            </tr>
          </table>
        </div>
      </div>
      <div class="vsep"></div>
      <div class="col">
        <h1>{{name}}</h1>
        <h2>{{title}}</h2>
        <p>{{summary}}</p>
      </div>
    </header>

    <div id="content">

      <h2>Work Experience</h2>

      {% for w in work %}
      <div class="grid wide pad-v">
        <div>{{w.startDate}} - {{w.endDate}}</div>
        <div>
          <h3>{{w.position}} @ {{w.employer}}</h3>
          <p>{{w.summary}}</p>
          <ul>
            {% for highlight in w.highlights %}
            <li>{{highlight}}</li>
            {% endfor %}
          </ul>
        </div>
      </div>
      {% endfor %}


      <h2>Education</h2>

      {% for e in education %}
      <div class="grid wide pad-v">
        <div>{{e.startDate}} - {{e.endDate}}</div>
        <div>
          <h3>{{e.degree}} in {{e.field}} @ {{e.institute}}</h3>
          <p>{{e.summary}}</p>
          <ul>
            <li>GPA: {{e.gpa}}</li>
            {% for highlight in e.highlights %}
            <li>{{highlight}}</li>
            {% endfor %}
          </ul>
        </div>
      </div>
      {% endfor %}


      <h2>Selected Publication</h2>

      {% for p in publications %}
      <div class="grid narrow pad-v">
        <div>{{p.year}}</div>
        <div>
          <h3>{{p.title}}</h3>
          <h4>{{p.publisher}}</h4>
          <p>{{p.summary}}</p>
        </div>
      </div>
      {% endfor %}

    </div>
  </main>
</body>

</html>
{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://raw.githubusercontent.com/gkutiel/tomlcv/refs/heads/main/cv-schema.json",
    "title": "CV",
    "description": "Your CV in TOML format",
    "type": "object",
    "$defs": {
        "iso8601": {
            "type": "string",
            "description": "e.g. 2014-06-29",
            "pattern": "^([1-2][0-9]{3}-[0-1][0-9]-[0-3][0-9]|[1-2][0-9]{3}-[0-1][0-9]|[1-2][0-9]{3})$"
        }
    },
    "additionalProperties": false,
    "required": [
        "image",
        "name",
        "title",
        "summary",
        "contact"
    ],
    "properties": {
        "image": {
            "type": "string",
            "description": "eg. image.jpg"
        },
        "name": {
            "type": "string",
            "description": "eg. Gilad Kutiel"
        },
        "title": {
            "type": "string",
            "description": "eg. Full Stack Developer"
        },
        "summary": {
            "type": "string",
            "description": "eg. I'm a full stack developer with 10 years of experience"
        },
        "contact": {
            "type": "object",
            "properties": {
                "email": {
                    "type": "string",
                    "description": "eg. example@gmail.com"
                },
                "phone": {
                    "type": "string",
                    "description": "eg. +972-50-1234567"
                },
                "linkedin": {
                    "type": "string",
                    "description": "eg. https://www.linkedin.com/in/kutiel"
                },
                "website": {
                    "type": "string",
                    "description": "eg. https://gilad.kutiel.com"
                },
                "dblp": {
                    "type": "string",
                    "description": "eg. https://dblp.org/pid/1234567"
                }
            },
            "required": [
                "email",
                "phone",
                "linkedin"
            ]
        },
        "work": {
            "type": "array",
            "additionalItems": false,
            "items": {
                "type": "object",
                "additionalProperties": false,
                "required": [
                    "startDate",
                    "endDate",
                    "employer",
                    "position",
                    "summary"
                ],
                "properties": {
                    "startDate": {
                        "$ref": "#/$defs/iso8601"
                    },
                    "endDate": {
                        "$ref": "#/$defs/iso8601"
                    },
                    "employer": {
                        "type": "string",
                        "description": "e.g. Facebook"
                    },
                    "position": {
                        "type": "string",
                        "description": "e.g. Software Engineer"
                    },
                    "summary": {
                        "type": "string",
                        "description": "e.g. Social Media Company"
                    },
                    "highlights": {
                        "type": "array",
                        "description": "Specify multiple accomplishments",
                        "additionalItems": false,
                        "items": {
                            "type": "string",
                            "description": "e.g. Increased profits by 20% from 2011-2012 through viral advertising"
                        }
                    }
                }
            }
        }
    }
}